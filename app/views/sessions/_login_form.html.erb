<%= form_with(data: { "turbo-frame" => "_top" }) do |form| %>
  <% if flash.any? %>
    <div class="error-explanation" data-controller="error">
      <ul>
        <li><%= flash[:error] %></li>
      </ul>
    </div>
  <% end %>

  <%= form.label :username %>
  <%= form.text_field :username %>

  <%= form.label :password %>
  <%= form.password_field :password %>

  <%= form.submit 'Login' %>
<% end %>
